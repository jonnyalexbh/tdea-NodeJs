{{>header_outside}}
<div class="container-fluid">
  <div class="container-wrap">
    <div class="wrap-login">
      <div class="box-img "><img src="/img/login.png" alt="logo Tecnológico de Antioquia"></div>
      <div class="box-form ">
        <form action="/login" method="post" class="col-md-8 offset-md-3">
          <h3 class="title">Login</h3>
          <hr class="divisor">
          <div class="form-group">
            <label for="user">Usuario</label>
            <input type="text" name="user" class="form-control" required>
          </div>
          <div class="form-group">
            <label for="pass">Contraseña</label>
            <input type="password" name="pass" class="form-control" required>
          </div>
          <div class="pb-2 text-center text-danger d-flex justify-content-center message">
            {{#if message}}
            {{{message}}}
            {{/if}}
          </div>
          <div class="d-flex justify-content-center">
            <button type="submit" class="btn btn-dark"><i class="fa fa-sign-in"></i>Ingresar</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
{{>footer_outside}}
