{{>header_outside}}
<div class="container-fluid">
  <div class="container-wrap">
    <div class="wrap-register">
      <h3 class="title">Registro</h3>
      <hr class="divisor">
      <div class="pb-2 text-center text-danger d-flex justify-content-center message">
        {{#if message}}
        {{{message}}}
        {{/if}}
      </div>
      <form action="/register-store" method="post">
        <div class="form-group">
          <label for="identity">Documento de identidad</label>
          <input type="number" name="identity" class="form-control" required />
        </div>
        <div class="form-group">
          <label for="name">Nombre</label>
          <input type="text" name="name" class="form-control" required />
        </div>
        <div class="form-group">
          <label for="email">Correo electrónico</label>
          <input type="email" name="email" class="form-control" required />
        </div>
        <div class="form-group">
          <label for="phone">Teléfono</label>
          <input type="text" name="phone" class="form-control" required />
        </div>
        <div class="d-flex justify-content-center">
          <div class="pr-1"><button type="submit" class="btn btn-dark">Guardar</button></div>
          <div><a href="/" class="btn btn-info">Volver</a></div>
        </div>
      </form>
    </div>
  </div>
</div>
{{>footer_outside}}
