{{>header}}
<div class="container-fluid">
  <div class="pb-4 d-flex justify-content-start">
    <h4>Actualizar notas</h4>
  </div>
  <div>{{show}}</div>
  <form action="/update-notes" method="post">
    <div class="form-row">
      <div class="form-group col-md-6">
        <label for="name">Nombre</label>
        <input type="text" name="name" required value="{{notes.name}}" class="form-control">
        <input type="hidden" name="id" required value="{{notes.id}}" class="form-control">
      </div>
    </div>
    <div class="form-row">
      <div class="form-group col-md-6">
        <label for="math">Matematicas</label>
        <input type="text" name="math" required value="{{notes.math}}" class="form-control">
      </div>
      <div class="form-group col-md-6">
        <label for="english">Ingles</label>
        <input type="text" name="english" required value="{{notes.english}}" class="form-control">
      </div>
    </div>
    <div class="form-row">
      <div class="form-group col-md-6">
        <label for="programming">Programaci√≥n</label>
        <input type="text" name="programming" value="{{notes.programming}}" class="form-control">
      </div>
    </div>
    <div class="pb-4 d-flex justify-content-center">
      <button type="submit" class="btn btn-dark">Guardar</button>
    </div>
  </form>
</div>
{{>footer}}
